<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag),
    class: 'tag_name', id: "tag_#{tag.id}" %>
    <li><%= link_to 'Delete Tag', tag_path(tag), method: :delete, data: {confirm: "Really delete this tag?"} %></li><br>
  <% end %>
</ul><br>
<%= link_to "<< Back to Articles List", articles_path %>

